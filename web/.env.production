# ============================================================================
# SMART TOURIST SAFETY SYSTEM - PRODUCTION ENVIRONMENT
# ============================================================================

# ========================================
# DATABASE CONFIGURATION (SUPABASE)
# ========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ========================================
# AUTHENTICATION SECRETS
# ========================================
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:8001
JWT_SECRET=your-jwt-secret-key-here

# ========================================
# BLOCKCHAIN CONFIGURATION
# ========================================
NEXT_PUBLIC_BLOCKCHAIN_NETWORK=polygon
NEXT_PUBLIC_CONTRACT_ADDRESS=0x...
PRIVATE_KEY=your-private-key-here
ALCHEMY_API_KEY=your-alchemy-api-key

# ========================================
# GOOGLE AUTHENTICATION
# ========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ========================================
# API CONFIGURATION
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WEB_URL=http://localhost:8001
WEBSOCKET_URL=ws://localhost:3001

# ========================================
# EXTERNAL SERVICES
# ========================================
GEMINI_API_KEY=your-gemini-api-key
SMS_API_KEY=your-sms-service-key
EMAIL_SERVICE_KEY=your-email-service-key

# ========================================
# DEVELOPMENT FLAGS
# ========================================
NODE_ENV=production
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_SHOW_ANALYTICS=true

# ========================================
# SECURITY SETTINGS
# ========================================
ENCRYPTION_KEY=your-encryption-key
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# ========================================
# MONITORING & ANALYTICS
# ========================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info